{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "ES2015",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "~/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*",
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}